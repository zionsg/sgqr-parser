{
  "name": "zionsg/sgqr-parser",
  "type": "library",
  "homepage": "https://github.com/zionsg/sgqr-parser",

  "require-dev": {
    "phpunit/phpunit": "^6.5",
    "squizlabs/php_codesniffer": "^3.3"
  },

  "autoload": {
    "psr-4": {
      "SgQr\\": "src/SgQr/"
    }
  },

  "autoload-dev": {
    "psr-4": {
      "SgQrTest\\": "test/SgQr/"
    }
  },

  "scripts": {
    "check": [
        "@cs",
        "@test"
    ],
    "cs": "phpcs",
    "test": "phpunit"
  }
}
